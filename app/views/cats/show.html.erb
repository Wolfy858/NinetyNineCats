<h1><%= @cat.name %></h1>

<table>
  <% [:age, :birth_date, :color, :sex, :description].each do |attribute|%>
    <tr>
      <td><%= attribute %> </td>
      <td><%=@cat.send(attribute) %>
    </tr>
  <% end %>
</table>
<br>


<h2> Rental Requests </h2>
<table>

    <tr>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Requester</th>
      <th>Status</th>
    </tr>
  <% @cat.rental_requests.order("start_date").each do |request| %>
    <%= render "request_tr", request: request %>
  <% end %>
</table>

<ul>
  <li><a href="<%= edit_cat_url(@cat) %>">Edit <%= @cat.name %></a></li>
  <li><a href="<%= cats_url %>">Index</a></li>
</ul>
